@model ResponseModel<UserDTO>;
@{
    Layout = "_IndexLayout";
}

<div class="container">

    <div class="forms">
        <form asp-controller="Home" asp-action="Login" method="post" id="login-form">
            <h1>Вход</h1>
            <div class="form-group">
                <label for="login-username">Username:</label>
                <input type="text" id="login-username" name="Username" required>
            </div>
            <div class="form-group">
                <label for="login-password">Пароль:</label>
                <input type="password" id="login-password" name="Password" required>
            </div>
            <div>
                <p>@Model.Error</p>
            </div>
            <button type="submit">Войти</button>
            <p>Нет аккаунта? <a href="#" onclick="toggleForm()">Зарегистрироваться</a></p>
        </form>
        <form asp-controller="Home" asp-action="Registration" method="post" class="hidden" id="register-form">
            <h1>Регистрация</h1>
            <div class="form-group">
                <label for="login-username">Username:</label>
                <input type="text" id="login-username" name="Username" required>
            </div>
            <div class="form-group">
                <label for="register-password">Пароль:</label>
                <input type="password" id="register-password" name="Password" required>
            </div>
            <div>
                <p>@Model.Error</p>
            </div>
            <button type="submit">Зарегистрироваться</button>
            <p>Уже есть аккаунт? <a href="#" onclick="toggleForm()">Войти</a></p>
        </form>
    </div>

    
</div>
